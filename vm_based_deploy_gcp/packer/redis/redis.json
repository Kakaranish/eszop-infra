{
    "variables": {
        "build_suffix": "",
        "project_id": ""
    },
    "builders": [
        {
            "type": "googlecompute",
            "project_id": "{{user `project_id`}}",
            "source_image": "ubuntu-minimal-2004-focal-v20210325",
            "disk_size": "10",
            "disk_type": "pd-ssd",
            "machine_type": "e2-medium",
            "communicator": "ssh",
            "zone": "europe-central2-a",
            "image_name": "redis-{{timestamp}}",
            "ssh_username": "root",
            "image_labels": [
                {
                    "build_suffix": "{{user `build_suffix`}}"
                }
            ]
        }
    ],
    "provisioners": [
        {
            "type": "file",
            "source": "../files",
            "destination": "/temp"
        },
        {
            "type": "file",
            "source": "../boot-scripts",
            "destination": "/scripts"
        },
        {
            "inline": [
                "apt-get update",
                "apt-get install -y redis-server",
                "chmod +x /scripts/boot.sh"
            ],
            "inline_shebang": "/bin/sh -x",
            "type": "shell"
        }
    ]
}