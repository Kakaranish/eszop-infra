{
    "variables": {
        "build_suffix": "",
        "project_id": ""
    },
    "builders": [
        {
            "type": "googlecompute",
            "project_id": "{{user `project_id`}}",
            "source_image": "ubuntu-minimal-2004-focal-v20210325",
            "disk_size": "10",
            "disk_type": "pd-ssd",
            "machine_type": "e2-medium",
            "communicator": "ssh",
            "zone": "europe-central2-a",
            "image_name": "eszop-frontend-{{timestamp}}",
            "ssh_username": "root",
            "image_labels": [
                {
                    "build_suffix": "{{user `build_suffix`}}"
                }
            ]
        }
    ],
    "provisioners": [
        {
            "type": "file",
            "source": "../boot-scripts",
            "destination": "/scripts"
        },
        {
            "type": "file",
            "source": "../files",
            "destination": "/temp"
        },
        {
            "inline": [
                "chmod +x /scripts/download-service.sh",
                "chmod +x /scripts/boot.sh",
                "chmod +x /scripts/start-service.sh",
                "apt-get update",
                "apt-get install -y apt-utils unzip nginx",
                "systemctl stop nginx",
                "/scripts/download-service.sh {{user `build_suffix`}}",
                "unzip -o $(find /temp -regex \".*frontend.*\") -d /usr/share/nginx/html",
                "mv -f /temp/nginx.conf /etc/nginx/sites-available/default",
                "chmod -R 755 /usr/share/nginx/html",
                "chown -R www-data:www-data /usr/share/nginx/html"
            ],
            "inline_shebang": "/bin/sh -x",
            "type": "shell"
        }
    ]
}